{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://loki.eztalo.com",
          "labels": [
            {
              "Key": "app",
              "Value": "Task-Service"
            },
            {
              "Key": "environment",
              "Value": "Development"
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CorsOrigins": [
    "http://localhost:5173"
  ]
}
