{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "${LOKI_URI}",
          "labels": [
            {
              "Key": "api",
              "Value": "Api-Gateway"
            },
            {
              "Key": "environment",
              "Value": "Production"
            }
          ]
        }
      }
    ]
  },
  "AuthSettings": {
    "Issuer": "${AUTH_ISSUER}"
  },
  "AllowedHosts": "${ALLOWED_HOSTS}",
  "CorsOrigins": [
    "${CORS_ORIGINS}"
  ]
} 